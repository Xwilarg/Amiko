<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Amiko.Client.MessageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label
                x:Name="Time"
                Padding="10,0,0,0"
                FontSize="10"
                VerticalTextAlignment="Center"
                WidthRequest="200" />
            <Label
                x:Name="Name"
                Padding="10,0,0,0"
                WidthRequest="100" />
            <Text x:Name="Content" Padding="50,0,0,0" />
        </HorizontalStackLayout>
        <HorizontalStackLayout x:Name="MessageContent" />
    </VerticalStackLayout>
</ContentView>
